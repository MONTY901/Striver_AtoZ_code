class Solution {
    public boolean isAnagram(String s, String t) {

        // Length check
        if (s.length() != t.length()) return false;

        // Frequency array for 26 lowercase letters
        int[] count = new int[26];

        // Count characters
        for (int i = 0; i < s.length(); i++) {
            count[s.charAt(i) - 'a']++;
            count[t.charAt(i) - 'a']--;
        }

        // Verify all counts are zero
        for (int c : count) {
            if (c != 0) return false;
        }

        return true;
    }
}
