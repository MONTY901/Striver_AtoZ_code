

class Solution {
    int lowerBound(int[] arr, int target) {
        int n = arr.length;
        
        int start = 0 , end = n-1;
        int ans = n;
        
        while(start <= end){
            
            int mid = start + (end - start) /2;
            
            if(arr[mid] >= target){
                ans = mid;
                end = mid - 1;
            }else{
                start = mid + 1;
            }
        }
        // code here
        return ans;
    }
}
