class Solution {

    void printTriangle(int n) {
        for(int i =0;i<n;i++){
            
            int space = n-1-i;
            
            int star = 2*i+1;
            
            
            for(int j =0;j<space;j++){
                System.out.print(" ");
            }
            
            for (int k =0;k<star;k++){
                System.out.print("*");
            }
            System.out.println();
    }
}
}
