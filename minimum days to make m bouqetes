class Solution {

    public int minDays(int[] bloomDay, int m, int k) {

        // Calculate the total number of flowers needed
        long totalFlowersNeeded = (long) m * k;

        // Impossible case
        if (totalFlowersNeeded > bloomDay.length) {
            return -1;
        }

        // Find min and max bloom days
        int minDay = Integer.MAX_VALUE;
        int maxDay = Integer.MIN_VALUE;

        for (int i = 0; i < bloomDay.length; i++) {
            minDay = Math.min(minDay, bloomDay[i]);
            maxDay = Math.max(maxDay, bloomDay[i]);
        }

        int low = minDay;
        int high = maxDay;

        // Binary search on days
        while (low <= high) {
            int mid = low + (high - low) / 2;

            if (possible(bloomDay, mid, m, k)) {
                high = mid - 1;   // try smaller day
            } else {
                low = mid + 1;    // need more days
            }
        }

        return low;
    }

    // Helper method to check feasibility
    private boolean possible(int[] bloomDay, int day, int m, int k) {
        int bouquets = 0;
        int flowers = 0;

        for (int i = 0; i < bloomDay.length; i++) {
            if (bloomDay[i] <= day) {
                flowers++;

                if (flowers == k) {
                    bouquets++;
                    flowers = 0;
                }
            } else {
                flowers = 0; // adjacency breaks
            }
        }

        return bouquets >= m;
    }
}
