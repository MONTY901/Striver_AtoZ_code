class Solution {
    int upperBound(int[] arr, int target) {
        int low = 0;
        int high = arr.length; // notice: high = n
        int ans = arr.length;

        while (low < high) {
            int mid = low + (high - low) / 2;

            if (arr[mid] > target) {
                ans = mid;       // possible upper bound
                high = mid;      // search left part
            } else {
                low = mid + 1;   // search right part
            }
        }

        return ans;
    }
}
