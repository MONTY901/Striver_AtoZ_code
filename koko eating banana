class Solution {

    public int minEatingSpeed(int[] piles, int h) {
        int left = 1;
        int right = 0;

        // find max pile
        for (int pile : piles) {
            right = Math.max(right, pile);
        }

        while (left <= right) {
            int mid = left + (right - left) / 2;

            long hours = 0; // ðŸ”¥ MUST be long

            for (int pile : piles) {
                hours += (pile + mid - 1) / mid;

                // optional optimization: stop early
                if (hours > h) break;
            }

            if (hours <= h) {
                right = mid - 1;
            } else {
                left = mid + 1;
            }
        }

        return left;
    }
}
